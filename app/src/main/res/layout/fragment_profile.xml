<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="393dp"
        android:layout_height="523dp"
        android:layout_marginBottom="0sp"
        android:scrollbarStyle="outsideInset"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Fill Your Profile!"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/gendertext"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:text="Your Gender" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/gendertextother"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:text="Your preferred roommate Gender" />

            <RadioGroup
                android:id="@+id/othergender"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/grade"
                android:layout_width="332dp"
                android:layout_height="20dp"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:text="Your Class Standing" />

            <RadioGroup
                android:id="@+id/gradeoptions"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:orientation="vertical"></RadioGroup>

            <TextView
                android:id="@+id/majorsgrouptext"
                android:layout_width="332dp"
                android:layout_height="20dp"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:text="Your Major" />

            <RadioGroup
                android:id="@+id/majorsgroup"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp">

            </RadioGroup>

            <TextView
                android:id="@+id/smokerstext"
                android:layout_width="332dp"
                android:layout_height="20dp"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:text="Do you smoke?" />

            <RadioGroup
                android:id="@+id/smoker"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/sleeptimetext"
                android:layout_width="332dp"
                android:layout_height="20dp"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:text="What's your approximate sleep time?" />

            <RadioGroup
                android:id="@+id/sleeptime"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>